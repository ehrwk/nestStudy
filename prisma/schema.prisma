// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id        Int       @default(autoincrement()) @id
  email     String    @unique
  nickname  String    @unique
  password  String
  createdAt DateTime

  boards    Board[]
  comments  Comment[]
}

model Board{
  id        Int       @default(autoincrement()) @id
  title     String
  content   String
  createdAt DateTime
  updateAt  DateTime?
  
  author    User @relation(fields: [userId], references: [id])
  userId    Int

  comments  Comment[]
}

model Comment{
  id        Int       @default(autoincrement()) @id
  content   String
  
  commenter User @relation(fields: [userId], references: [id])
  userId    Int

  postNum   Board @relation(fields: [postId], references: [userId])
  postId    Int
    
  createdAt DateTime
  updateAt  DateTime?

}
